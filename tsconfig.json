{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "declaration": true,
    // "emitDeclarationOnly": false,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": ["*.ts"],
  "exclude": ["dist", "examples", "node_modules", "vitest.config.ts"]
}
