{
  "name": "neon-testing",
  "version": "1.0.1",
  "description": "A Vitest utility for automated integration tests with Neon",
  "keywords": [
    "neon",
    "postgres",
    "postgresql",
    "testing",
    "vitest"
  ],
  "author": "Mikael Lirbank",
  "license": "MIT",
  "repository": "https://github.com/starmode-base/neon-testing",
  "homepage": "https://github.com/starmode-base/neon-testing",
  "bugs": "https://github.com/starmode-base/neon-testing/issues",
  "module": "index.ts",
  "type": "module",
  "files": [
    "index.ts"
  ],
  "scripts": {
    "test": "vitest",
    "format": "prettier --write .",
    "release": "bun publish",
    "prepublishOnly": "git diff-index --quiet HEAD || (echo 'Error: You have uncommitted changes' && exit 1) && rm -rf dist && tsc",
    "postpublish": "git tag v$(bun -p \"require('./package.json').version\") && git push --tags"
  },
  "dependencies": {
    "@neondatabase/api-client": "^2.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.8.3",
    "vitest": "^3.2.2"
  },
  "devDependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "dotenv": "^16.5.0",
    "pg": "^8.16.0",
    "postgres": "^3.4.7",
    "prettier": "^3.5.3"
  }
}
